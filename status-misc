# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "disk /"
order += "cpu_temperature 0"
order += "battery 1"
order += "battery 0"
order += "load"
order += "volume master"
order += "tztime local"

battery 0 {
        format = "%status %percentage"
        format_down = ""
        status_chr = "   "
        status_bat = "  "
        status_full =  "  "
        low_threshold = 14
        integer_battery_capacity = true
}

battery 1 {
        format = "%status %percentage"
        format_down = ""
        status_chr = "   "
        status_bat = "  "
        status_full =  "  "
        low_threshold = 0
        integer_battery_capacity = true
}

tztime local {
        format = " %a, %d. %b. %y (W# %W)  %H:%M"
}

load {
        format = " %1min  %5min  %15min"
        max_threshold = "1,0"
}

disk "/" {
        format = " %avail"
}

volume master {
        format = " %volume"
        format_muted = " (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_temperature 0 {
        format = " %degrees °C"
        max_threshold = 60
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input"
}

